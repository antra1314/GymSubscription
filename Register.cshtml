@page
@model StayFitGym.RegisterModel

<br />
<h2 class="text-info">Register for subscription</h2>
<br />
<h6>
    LET'S GET STARTED
    Find a participating gym
</h6>
<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserDetailsForRegistration.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="UserDetailsForRegistration.Name" class="form-control" />
            </div>
            <span asp-validation-for="UserDetailsForRegistration.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserDetailsForRegistration.DOB"></label>
            </div>
            <div class="col-6 input-group">
                <input asp-for="UserDetailsForRegistration.DOB" class="form-control" placeholder="dd-mm-yyyy" />
            </div>
            <span asp-validation-for="UserDetailsForRegistration.DOB" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserDetailsForRegistration.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="UserDetailsForRegistration.Email" class="form-control" />
            </div>
            <span asp-validation-for="UserDetailsForRegistration.Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserDetailsForRegistration.UserID"></label>
            </div>
            <div class="col-6">
                <input asp-for="UserDetailsForRegistration.UserID" class="form-control" />
            </div>
            <span asp-validation-for="UserDetailsForRegistration.UserID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserDetailsForRegistration.Password"></label>
            </div>
            <div class="col-6">
                <input type="password" asp-for="UserDetailsForRegistration.Password" class="form-control" />
            </div>
            <span asp-validation-for="UserDetailsForRegistration.Password" class="text-danger"></span>
        </div>
        <div class="form-group row col-8">
            <div class="col-3 offset-4">
                <input type="submit" value="Register" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to Login Page</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}